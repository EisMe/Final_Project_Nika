@model IEnumerable<Final_Project_Nika.Models.Product>

@{
	ViewData["Title"] = "Index";
}

<h2>Products</h2>

<p>
	<a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Color)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ListPrice)
			</th>
			<th> 
			     @Html.DisplayNameFor(model => model.ThumbNailPhoto)
			</th>            
			<th>
				@Html.DisplayNameFor(model => model.ProductCategory)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductModel)
			</th>
			<th>
				Number of Orders
			</th>
			<th>
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Color)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ListPrice)
				</td>
			
				<td>
					<partial name="_ProductImage" model="@item" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductCategory.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductModel.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OrderCount)
				</td>
				<td>
					<a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ProductId">Edit</a> |
					<a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.ProductId">Details</a> |
					<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
