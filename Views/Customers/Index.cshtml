@model IEnumerable<Final_Project_Nika.Models.Customer>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Full Name
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CompanyName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EmailAddress)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Phone)
			</th>
			<th>
				Number of Adresses
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@{
						var fullName = item.Title + " " + item.FirstName + " " + item.MiddleName + " " + item.LastName + " " + item.Suffix;
					}
					@fullName
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CompanyName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EmailAddress)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Phone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CustomerAddresses.Count)
				<td>
					<a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CustomerId">Edit</a> |
					<a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.CustomerId">Details</a> |
					<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CustomerId">Delete</a>

				</td>
			</tr>
		}
	</tbody>
</table>
