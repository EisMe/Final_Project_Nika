@model IEnumerable<Final_Project_Nika.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Total Items
            </th>
            <th>    
                Actions
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ProductCount)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ProductCategoryId">Edit</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.ProductCategoryId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ProductCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
