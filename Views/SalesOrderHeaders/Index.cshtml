@model IEnumerable<Final_Project_Nika.Models.SalesOrderHeader>

@{
    ViewData["Title"] = "Sales Orders";
}

<h1>Sales Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.SalesOrderNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Name</th>
            <th>@Html.DisplayNameFor(model => model.TotalDue)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.SalesOrderNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@{
						var fullName = item.Customer?.FirstName + " " + item.Customer?.LastName;
                    }
                    @fullName
                </td>
                <td>@Html.DisplayFor(modelItem => item.TotalDue)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.SalesOrderId">Edit</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.SalesOrderId">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SalesOrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

