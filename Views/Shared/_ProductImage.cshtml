@* Views/Shared/_ProductImage.cshtml *@
@model Product

@{
    var imageUrl = Model?.ThumbNailPhoto != null
        ? Url.Action("GetImage", "Products", new { id = Model.ProductId })
        : "/images/no-image.png";
}

<img src="@imageUrl" alt="@(Model?.Name ?? "Product Image")" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />